<script>
    // Função para abrir e fechar a sidebar em telas menores
    function toggleSidebar() {
        const sidebar = document.querySelector('.sidebar');
        const content = document.querySelector('.content');
        sidebar.classList.toggle('open');
        content.classList.toggle('collapsed');
    }

    function toggleSection(sectionId) {
        const section = document.getElementById(sectionId);
        section.classList.toggle('hidden');
    }
</script>

<style>
/* Reset Básico */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

/* Corpo da Página */
body {
    background-color: #f4f4f9;
    color: #333;
    display: flex;
    flex-direction: column;
    min-height: 100vh;
}

/* Cabeçalho */
header {
    background: linear-gradient(135deg, #0044cc, #002766);
    color: white;
    padding: 20px;
    text-align: center;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    font-size: 1.8rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
}

header img {
    max-width: 150px;
    height: auto;
}

/* Layout Principal */
.main-container {
    display: flex;
    flex: 1;
    margin: 20px;
}

/* Sidebar */
.sidebar {
    width: 250px;
    background-color: #2c3e50;
    padding: 20px;
    color: white;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
}

.sidebar ul {
    list-style: none;
}

.sidebar ul li {
    padding: 15px;
    cursor: pointer;
    font-size: 1rem;
    border-bottom: 1px solid #34495e;
    transition: background-color 0.3s ease;
    display: flex;
    align-items: center;
    gap: 10px;
}

.sidebar ul li i {
    color: #f1c40f;
}

.sidebar ul li:hover {
    background-color: #1a252f;
    border-radius: 5px;
}

.sidebar ul li a {
    color: white;
    text-decoration: none;
}

.sidebar ul .hidden {
    display: none;
}

/* Container Principal */
.container {
    flex: 1;
    background: white;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    margin-left: 20px;
}

/* Título Principal */
.container h2 {
    color: #0044cc;
    margin-bottom: 20px;
    font-size: 2rem;
    text-align: center;
}

/* Botões das Abas */
.tab-buttons {
    display: flex;
    justify-content: center;
    margin-bottom: 20px;
    gap: 15px;
}

.tab-buttons button {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    border: 2px solid #0044cc;
    background-color: white;
    cursor: pointer;
    font-weight: bold;
    color: #0044cc;
    transition: background-color 0.3s, color 0.3s, transform 0.2s;
    font-size: 18px;
}

.tab-buttons button:hover {
    background-color: #e6f0ff;
}

.tab-buttons button.active {
    background-color: #0044cc;
    color: white;
    transform: scale(1.1);
}

/* Abas */
.tab {
    display: none;
}

.tab.active {
    display: block;
    animation: fadeIn 0.3s ease-in-out;
}

@keyframes fadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 1;
    }
}

/* Formulário */
form {
    display: flex;
    flex-direction: column;
    gap: 20px;
}

.form-row {
    display: flex;
    flex-wrap: wrap;
    gap: 20px;
}

.form-row div {
    flex: 1;
    min-width: 200px;
}

label {
    font-weight: bold;
    display: block;
    margin-bottom: 5px;
    color: #555;
}

input[type="text"],
input[type="number"],
input[type="file"],
textarea,
select {
    width: 100%;
    padding: 12px;
    border: 1px solid #ccc;
    border-radius: 5px;
    transition: border-color 0.3s;
    font-size: 1rem;
}

input:focus,
textarea:focus,
select:focus {
    border-color: #0044cc;
    outline: none;
    box-shadow: 0 0 8px rgba(0, 68, 204, 0.2);
}

textarea {
    resize: vertical;
    height: 80px;
}

/* Botões */
button {
    background: #0044cc;
    color: white;
    padding: 12px 20px;
    border: none;
    border-radius: 5px;
    cursor: pointer;
    font-size: 1rem;
    font-weight: bold;
    transition: background-color 0.3s, transform 0.2s;
    text-transform: uppercase;
}

button:hover {
    background-color: #003399;
    transform: translateY(-3px);
    box-shadow: 0 4px 12px rgba(0, 68, 204, 0.3);
}

/* Botão Vincular Dirigentes */
.container1 {
    text-align: center;
    margin: 30px 0;
}

button a {
    color: white;
    text-decoration: none;
}

/* Rodapé */
footer {
    background-color: #002766;
    color: white;
    text-align: center;
    padding: 15px;
    font-size: 0.9rem;
    margin-top: 30px;
    border-radius: 10px;
}
</style>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<body>

    <!-- Cabeçalho -->
    <header>
        <h1>Ministério do Esporte</h1>
        <img src="img/Imagem1.png" alt="Logo" width="10%">
    </header>
<div class="main-container">
    <div class="sidebar">
        <ul>
            <li onclick="toggleSection('formalizacao')">
                <i class="fas fa-folder"></i> Formalização
            </li>
            <ul id="formalizacao" class="hidden">
                <li><a href="Documentações.html">OSC/Sociedade Civil</a></li>
                <li><a href="Formulario_convênio.html">Entidades Públicas</a></li>
            </ul>
            <li onclick="toggleSection('acompanhamento')">
                <i class="fas fa-file-alt"></i> Acompanhamento
            </li>
            <ul id="acompanhamento" class="hidden">
                <li><a href="Formulário_Relma.html">Ficha Relmas</a></li>
            </ul>
        </ul>
    </div>

    <div class="container">
        <h2>Atestado e Declarações</h2>

        <div class="tab-buttons">
            <button onclick="mostrarAba('aba1')" class="active">1</button>
            <button onclick="mostrarAba('aba2')">2</button>
            <button onclick="mostrarAba('aba3')">3</button>
        </div>
                <!-- Formulário de Preenchimento -->
                <form id="declaracoesForm">
                    <div id="aba1" class="tab active">
                        <h3>Dados do Dirigente da Entidade</h3>
                        <div class="form-row">
                            <div class="half-width">
                                <label for="dirigente">Nome Completo do Dirigente:</label>
                                <input type="text" id="dirigente">
                            </div>
                            <div class="half-width">
                                <label for="cpf">CPF:</label>
                                <input type="text" id="cpf" maxlength="14">
                            </div>
                        </div>
                        <div class="form-row">
                            <div class="half-width">
                                <label for="rg">RG:</label>
                                <input type="text" id="rg">
                            </div>
                            <div class="half-width">
                                <label for="orgaoEmissor">Órgão Expedidor:</label>
                                <input type="text" id="orgaoEmissor">
                            </div>
                        </div>
                        <div class="form-row">
                            <label for="cargoDirigente">Cargo do Dirigente:</label>
                            <input type="text" id="cargoDirigente" placeholder="Ex: Presidente">
                        </div>
                    </div>
            
                    <div id="aba2" class="tab">
                        <h3>Dados da Entidade</h3>
                        <div class="form-row">
                            <div class="half-width">
                                <label for="entidade">Nome da Entidade:</label>
                                <input type="text" id="entidade">
                            </div>
                            <div class="half-width">
                                <label for="cnpj">CNPJ:</label>
                                <input type="text" id="cnpj" maxlength="18">
                            </div>
                        </div>
                        <div class="form-row">
                            <label for="endereco">Endereço Completo:</label>
                            <input type="text" id="endereco">
                        </div>
                        <div class="form-row">
                            <div class="half-width">
                                <label for="uf">UF:</label>
                                <input type="text" id="uf" maxlength="2">
                            </div>
                            <div class="half-width">
                                <label for="municipio">Município:</label>
                                <input type="text" id="municipio">
                            </div>
                            <div class="half-width">
                                <label for="cep">CEP:</label>
                                <input type="text" id="cep">
                            </div>
                        </div>
                    </div>
            
                    <div id="aba3" class="tab">
                        <h3>Rubrica Orçamentária</h3>
                        <div class="form-row">
                            <label for="leiOrcamentaria">Lei Orçamentária:</label>
                            <input type="text" id="leiOrcamentaria">
                        </div>
                        <div class="form-row">
                            <div class="third-width">
                                <label for="diaLei">Dia:</label>
                                <input type="number" id="diaLei" min="1" max="31">
                            </div>
                            <div class="third-width">
                                <label for="mesLei">Mês:</label>
                                <input type="text" id="mesLei">
                            </div>
                            <div class="third-width">
                                <label for="anoLei">Ano:</label>
                                <input type="number" id="anoLei" min="2000" max="2100">
                            </div>
                        </div>
                        <div class="form-row">
                            <label for="orgao">Órgão:</label>
                            <input type="text" id="orgao">
                        </div>
                        <div class="form-row">
                            <label for="unidade">Unidade:</label>
                            <input type="text" id="unidade">
                        </div>
                        <div class="form-row">
                            <label for="funcao">Função:</label>
                            <input type="text" id="funcao">
                        </div>
                        <div class="form-row">
                            <label for="subfuncao">Subfunção:</label>
                            <input type="text" id="subfuncao">
                        </div>
                        <div class="form-row">
                            <label for="programa">Programa:</label>
                            <input type="text" id="programa">
                        </div>
                        <div class="form-row">
                            <label for="proposta">Proposta:</label>
                            <input type="text" id="proposta">
                        </div>
                        <div class="form-row">
                            <label for="atividade">Atividade:</label>
                            <input type="text" id="atividade">
                        </div>
                        <div class="form-row">
                            <label for="naturezaDespesa">Natureza da Despesa:</label>
                            <input type="text" id="naturezaDespesa">
                        </div>
                    </div>
                    <div class="form-row">
                        <label for="nomeProjeto">Nome do Projeto/Ação:</label>
                        <input type="text" id="nomeProjeto">
                    </div>
                    <div class="form-row">
                        <label for="entidadesParceiras">Entidades Parceiras:</label>
                        <input type="text" id="entidadesParceiras">
                    </div>
                    <div class="form-row">
                        <label for="periodoVigencia">Período de Vigência:</label>
                        <input type="text" id="periodoVigencia" placeholder="Ex: 01/2023 a 12/2023">
                    </div>
                    <div class="form-row">
                        <label for="numeroBeneficiados">Número de Beneficiados:</label>
                        <input type="number" id="numeroBeneficiados">
                    </div>
                    <div class="form-row">
                        <label for="acoesDesenvolvidas">Ações/Atividades Desenvolvidas:</label>
                        <textarea id="acoesDesenvolvidas" rows="3"></textarea>
                    </div>
                    
                    <!-- Objeto do Convênio -->
                    <div class="form-row">
                        <label for="objetoConvenio">Objeto do Convênio:</label>
                        <textarea id="objetoConvenio" rows="3"></textarea>
                    </div>
                    
                    <!-- Cargos Opcionais -->
                    <div class="form-row">
                        <label for="chefeExecutivo">Chefe do Poder Executivo (opcional):</label>
                        <input type="text" id="chefeExecutivo" placeholder="Nome do Chefe Executivo">
                    </div>
                    <div class="form-row">
                        <label for="secretarioFinancas">Secretário de Finanças (opcional):</label>
                        <input type="text" id="secretarioFinancas" placeholder="Nome do Secretário de Finanças">
                    </div>
                    <div class="form-row">
                        <label for="valorContrapartida">Valor da Contrapartida:</label>
                        <input type="text" id="valorContrapartida">
                    </div>
                    <div class="form-row">
                        <label for="valorContrapartidaExtenso">Valor por Extenso:</label>
                        <input type="text" id="valorContrapartidaExtenso">
                    </div>
                    <div class="form-row">
                        <label for="imagens">Selecione Imagens:</label>
                        <input type="file" id="imagens" multiple>
                    </div>
                    
                    <div id="descricaoImagens"></div>
            
                </form>
            

        <!-- Botão para Vincular Dirigentes -->
        <div class="container1">
            <button id="vincularDirigente">
                <a href="formulario-dirigente">Declarações Art 26, 27 do Decreto Nº 8.726</a>
            </button>
        </div>

        <!-- Escolha de Opções -->
        <h3>Escolha uma Opção para Gerar o PDF</h3>
        <select id="opcaoSelecao" required>
            <option value="" disabled selected>Selecione uma opção</option>
            <option value="20JP_20JQ_ate_50k">20JP e 20JQ - Discricionário - Até 50 mil habitantes</option>
            <option value="00SL_emendas">00SL - Emendas Individual e Bancada</option>
            <option value="20JP_20JQ_emenda">20JP e 20JQ - Emenda Individual e de Bancada</option>
            <option value="20JP_20JQ_comissao_mais_50k">20JP e 20JQ - Discricionário de Comissão - Mais de 50 mil habitantes</option>
            <option value="00SL_comissao_mais_50k">00SL - Discricionário e Comissão - Mais de 50 mil habitantes</option>
            <option value="00SL_comissao_ate_50k">00SL - Discricionário e Comissão - Até 50 mil habitantes</option>
        </select>

        <button id="gerarPDF">Gerar PDF Selecionado</button>

        <div id="loadingMessage" style="display:none; color:blue; margin-top:10px;">
            Aguarde, gerando PDF...
        </div>
    </div>
</div>
    
    <script>
         function mostrarAba(abaId) {
            const abas = document.querySelectorAll('.tab');
            const botoes = document.querySelectorAll('.tab-buttons button');

            abas.forEach(aba => aba.classList.remove('active'));
            botoes.forEach(botao => botao.classList.remove('active'));

            document.getElementById(abaId).classList.add('active');
            event.target.classList.add('active');
         }

    const imagensInput = document.getElementById('imagens');

    imagensInput.addEventListener('change', function () {
        const descricaoContainer = document.getElementById('descricaoImagens');
        descricaoContainer.innerHTML = '';

        Array.from(imagensInput.files).forEach((file, index) => {
            const div = document.createElement('div');
            div.innerHTML = `
                <div class="form-row">
                    <label for="descricao${index}">Descrição da Imagem ${index + 1}:</label>
                    <textarea id="descricao${index}" rows="2"></textarea>
                </div>
            `;
            descricaoContainer.appendChild(div);
        });
    });
    </script>

