        }

        .logo-header {
            height: 50px;
        }

        /* Conteúdo Principal */
        .container {
            max-width: 1200px;
            margin: 30px auto;
            padding: 20px;
            background: #fff;
            border-radius: 10px;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
        }

        /* Abas de Navegação */
        .tabs {
            display: flex;
            border-bottom: 3px solid #005CAA;
            background-color: #f4f7f9;
        }

        .tab {
            flex: 1;
            text-align: center;
            padding: 15px;
            cursor: pointer;
            background-color: #fff;
            color: #005CAA;
            font-weight: bold;
            transition: all 0.3s ease;
            border-right: 1px solid #ddd;
        }

        .tab:last-child {
            border-right: none;
        }

        .tab:hover, .tab.active {
            background-color: #005CAA;
            color: #fff;
            border-bottom: 3px solid #fff;
        }

        /* Conteúdo das Abas */
        .tab-content {
            display: none;
            padding: 20px;
            animation: fadeIn 0.3s ease-in-out;
        }

        .tab-content.active {
            display: block;
        }

        @keyframes fadeIn {
            from { opacity: 0; }
            to { opacity: 1; }
        }

        /* Formulários */
        form label {
            display: block;
            margin-bottom: 8px;
            font-weight: bold;
            color: #005CAA;
        }

        form input,
        form textarea,
        form select {
            width: 100%;
            padding: 12px;
            margin-bottom: 15px;
            border: 1px solid #ddd;
            border-radius: 5px;
            font-size: 16px;
        }

        form input:focus,
        form textarea:focus,
        form select:focus {
            border-color: #005CAA;
            outline: none;
            box-shadow: 0 0 5px rgba(0, 92, 170, 0.2);
        }

        form button {
            background-color: #005CAA;
            color: #fff;
            padding: 12px 25px;
            border: none;
            border-radius: 5px;
            font-size: 16px;
            font-weight: bold;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        form button:hover {
            background-color: #003d80;
        }

        #submitAll {
            margin: 20px auto;
            background-color: #28a745;
            color: white;
            padding: 15px 30px;
            font-size: 18px;
            font-weight: bold;
            border: none;
            border-radius: 8px;
            cursor: pointer;
