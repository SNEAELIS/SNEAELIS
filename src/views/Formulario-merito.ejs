    <script>
        function saveTab(tabId) {
            const form = document.querySelector(`#form${tabId}`);

            if (!form) {
                console.error(`Erro: Formulário não encontrado para a aba ${tabId}`);
                alert(`Erro: Formulário não encontrado para a aba ${tabId}`);
                return;
            }

            try {
                const formData = new FormData(form);
                
                // Exibir os dados do formulário no console para depuração
                const data = Object.fromEntries(formData.entries());
                console.log(`Dados da aba ${tabId}:`, data);

                alert(`Informações da aba ${tabId} salvas com sucesso!`);
            } catch (error) {
                console.error(`Erro ao criar FormData para a aba ${tabId}:`, error);
                alert(`Erro ao salvar dados da aba ${tabId}: ${error.message}`);
            }
        }
        async function buscarDadosCNPJ() {
            const cnpjInput = document.getElementById('cnpjProponente');
            const cnpj = cnpjInput.value.replace(/\D/g, ''); // Remove pontos e barras

            try {
                const response = await fetch(`http://localhost:3000/buscar-cnpj/${cnpj}`);
                
                if (!response.ok) {
                    throw new Error(`Erro na API: ${response.status} ${response.statusText}`);
                }

                const dados = await response.json();

                document.getElementById('nomeProponente').value = dados.nome;
                document.getElementById('nomeDirigente').value = dados.qsa ? dados.qsa[0].nome : '';
                document.getElementById('telefoneDirigente').value = dados.telefone;
                document.getElementById('emailDirigente').value = dados.email;

            } catch (error) {
                console.error('Erro:', error);
                alert(`Erro ao buscar os dados da entidade: ${error.message}`);
            }
        }
        // Alternar entre as abas
        const tabs = document.querySelectorAll(".tab");
        const contents = document.querySelectorAll(".tab-content");

        tabs.forEach(tab => {
            tab.addEventListener("click", () => {
                tabs.forEach(t => t.classList.remove("active"));
                tab.classList.add("active");

                contents.forEach(content => content.classList.remove("active"));
                document.getElementById(tab.dataset.tab).classList.add("active");
            });
        });

